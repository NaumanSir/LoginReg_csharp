@model LoginReg.Models.User
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login & Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #container {
            padding: 0px;
            margin: 0px;
            font-family: 'Lucida Sans';
        }
        span {
            color: red;
        }
        #left {
            padding: 0px 10px 10px 5px;
            width: 48%;
            display: inline-block;
        }
        #right {
            padding: 0px 10px 10px 5px;
            width: 200px;
            display: inline-block;
            vertical-align: top;
        }
    </style>
</head>

<body>
<div id="container">
    <h1>Login Reg Test</h1>
    <div id="left">
        <h1>Registration</h1>
        <form asp-controller="User" asp-action="Register" method="POST">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
            <br>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
            <br>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <br>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
            <br>
            <label asp-for="ConfirmPW"></label>
            <input asp-for="ConfirmPW" />
            <span asp-validation-for="ConfirmPW"></span>
            <br>
            <input type="submit">
        </form>
    </div>
    <div id="right">
        <h1>Login</h1>
        <form asp-controller="User" asp-action="Login" method="POST">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <br>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
            <br>
            <button type="submit">Login</button>
        </form>
    </div>
</div>
</body>